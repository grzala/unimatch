<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
  <div class=”item”>+
   <% @conversations.each do |conversation| %>
     <li><%= link_to conversation.recipient_id, :controller => :conversation, :action => :show, :id => conversation.recipient_id %></li>
    
   <% end %>
  </div>
 </div>
</div>
<div class="ui segment">
 <h3>All Users</h3>
  <div class="ui list">
   <% @users.each do |user| %>
   
    <div class="item">
   <%= user.name %> 
   <li>
    <%= link_to "MESSAGE ME", :controller => :conversation, :action => :show, :id => user.id %>
   </li>
 </div>
  <% end %>
 </div>
</div>