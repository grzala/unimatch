<% @page_title = "Event page" %>

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="event-wrapper">
    <div class="row event-info">
        <div class="row event-title">
            <div class="col-md-12">
                <div class="event-header">
                    <h1><%= @event.name %></h1>
                    <h5>Hosted by: <%= if @society != nil then @society.name else User.find(@event.user_id).name end %></h5>
                    <h4><a href="#" id="participants-btn" style="text-decoration: underline; color: black"><%= @participants.length %> attending this event</a></h4>
                </div>
            </div>
        </div>
        
        <div class="row event-eval">
            <div class="col-md-2">
                <div class="date" style="margin-bottom: 20px">
                	<span class="binds"></span>
                	<span class="month"><%= @event.date.strftime("%B")[0..2] %></span>
                	<h1 class="day"><%= @event.date.day %></h1>
                </div>
                <h5><%= @time_str %></h5>
                <h4><%= @event.location %></h4>
                <%= link_to controller: 'event', action: 'join_leave', id: @event.id do %>
                   <div class="btn btn-danger"><%= if @participates then "Leave Event" else "Join Event" end %></div>
                <% end %>
                <a href="#"><div class="btn btn-danger" id="invite-btn">Invite</div></a>
            </div>
            <div class="col-md-7">
                <p class="event-description"><%= @event.description %></p>
            </div>
        </div>
        
    </div>
    
    <div class="row event-activity">
    </div>
</div>

<!-- Trigger/Open The Modal -->
<button id="open-modal">Open Modal</button>

<!-- The Modal -->
<div class="modal" id="modal">

  <!-- Modal content -->
    <div class="invite-modal-wrapper">
        <div class="row">
            <div class="col-md-11">

            </div>
            <div class="col-md-1">
                <span class="close-modal" id="close-modal">&times;</span>
            </div>
        </div>
    </div>
</div>

<script>
    var modal = $('#modal');
    var btn = $("#open-modal");
    var close = $("#close-modal");
    
    btn.click(function() {
        modal.show();
    });
    
    close.click(function() {
        modal.hide();
    })

</script>


