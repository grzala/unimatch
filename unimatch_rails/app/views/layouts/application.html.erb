<!DOCTYPE html>
<html>
  <head>
    <title>UnimatchRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <img class="inline_block" src="/assets/unimatch_logo.png" alt="UniMatch Logo" height="100" >
    <% if session[:user_id] %>
      <div class="nav_left">
      <div id="desktop_nav">
      <ul>
        <p><%= session[:user_id] %></p>
        <li><%= link_to 'Home', :controller => :user, :action => :show ,  id: session[:user_id] %></li>
        <li><%= link_to 'Societies', :controller => :society, :action=> :list %></li>
        <li><%= link_to 'Matches', :controller => :user, :action => :match,  id: session[:user_id] %></li>
        <li><%= link_to 'Society_Matches', :controller => :society, :action => :match,  id: session[:user_id] %></li>
        <li><%= link_to 'Feedback', '#' %></li>
      </ul>
      </div>
      <div id = "details">
      <p>You are logged in as <%= link_to session[:user_name], controller: 'user', action: 'show', id: session[:user_id] %> <%= link_to "logout", logout_url %></p>
      </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
