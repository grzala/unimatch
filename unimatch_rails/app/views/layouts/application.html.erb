<!DOCTYPE html>
<html>
  <head>
    <title>UnimatchRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <h1 id="header_text">UniMatch</h1>
    
    <% if session[:user_id] %>
      <div class="nav_left">
      <p>You are logged in as <%= link_to session[:user_name], controller: 'user', action: 'show', id: session[:user_id] %> <%= link_to "logout", logout_url %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
