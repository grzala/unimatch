<!DOCTYPE html>
<html>
  <head>
    <title>UnimatchRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if session[:user_id] %>
      <p>You are logged in as <%= session[:user_name] %> <%= link_to "logout", '/logout' %></p>
    <% else %>
      <p>You are not logged in <%= link_to "login", '/login' %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
