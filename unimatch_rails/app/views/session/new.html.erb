<!DOCTYPE html>
<html>
<head>
    <title>Unimatch Login</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'login_page', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div class="block_centre" id="login_container">
<%= image_tag("unimatch_logo.png", border: 0, height: "100", alt: "UniMatch Logo", :class => "logo") %>
<h1>Please Log In</h1>
<%= form_tag do %>
    <div class="center" id="login_form">
    <div class="Sign_Form">
    <fieldset>
    <div class="input-group">
    <input type="text" class="form-control" placeholder="email" aria-describedby="basic-addon2" <%= text_field_tag :email, params[:email] %>
    </div>
    <br>
    <div class="input-group">
    <input type="password" class="form-control" placeholder="password" aria-describedby="basic-addon2" <%= password_field_tag :password, params[:password] %>
    </div>
    <br>
    <div>
    <%= submit_tag "Log In", {:id => 'login'} %>
    </div>
    </fieldset>
    </div>
    </div>
    </div>
    </div>
    </div>
<% end %>
<div class="sign_form">
    <h2>Sign up</h2>
    <p>You email address needs to end in .ac.uk to be able to create an account. No other email addresses will be accepted.</p>
    <%= form_for(:user, :url => {:controller => 'user', :action => 'create'}) do |f| %>
        <p> Email: </br> <%= f.text_field :email %></p>
        <p> password: </br> <%= f.password_field :password %> </p>
         <p> password: </br> <%= f.password_field :password_confirmation %> </p>
        <p> name: </br> <%= f.text_field :name %></p>
        <p> surname: </br> <%= f.text_field :surname %></p>
        
        
        <%= f.submit :Signup %>
    <% end %>
</div>
</body>

