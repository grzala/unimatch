<div class="recommend_text">
    <h2>Recommended Societies</h2>
    <h5>Societies that relate to your interests</h5>
    <br>
</div>



<div class="row magic">
    <% @matched_societies[0..5].each do |society, coefficient| %>
        <% if coefficient > 0 && society.id != society.id+1 %>
                <div class="test">
                    <%= link_to society.name, controller: 'society', action: 'show', :id => society.id do %>
                       <div class="society_box"> 
                           <div id="society_img">
                                <%= image_tag society.avatar_url(:display) %>
                                <!--<%= image_tag("society_img.png", :alt => "society_img") %>-->
                            </div>
                            <div id="society_name">
                                <h5><%= society.name.truncate_words(2) %></h5>
                            </div>
                        </div>
                    <% end %>
                </div>
        <% end %>
    <% end %>
</div>
<%= link_to :action => :list do %>
    <h4>View all societies</h4>
<% end %>
