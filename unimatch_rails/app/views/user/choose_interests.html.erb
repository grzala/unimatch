            <%= form_tag update_interests_url, :id => @user.id do %>
                    <div id="sports_show" style=" display:none; padding-left: 20px; padding-bottom: 20px; margin-bottom:100px;" class="col-md-12">
                    <p>Sports</p>
                    <div class = "row" style="table-layout: fixed;">
                    <% @interests1.each do |interest| %>
                        <div class="col-md-3">
                        <% checked = @user_interests.include? interest %>
                        <input type="checkbox" style="opacity:0;" <%= check_box_tag "interests[]", interest.id, checked, {:multiple => true} %>>
                        <label ><%= interest.name %></label>
                        <%= image_tag("Interests/#{interest.name}.jpg?id=#{interest.name}")%>
                        </div>
                        <% end %>
