            <div class="name_details">
                <h5>Name:</h5>
                <%= f.text_field :name, :class => "form_control" %>
            </div>
            <div class="surname_details">
                <h5>Surname:</h5>
                <%= f.text_field :surname, :class => "form_control" %>
            </div>
            <div class="change_profile_picture">
                <h5>Current profile picture: </h5>
            </div>
            
            <div class="image_details_box">
                <%= image_tag @user.avatar_url(:display), :class => "image_details"  %>
            </div>
            <%= f.file_field :avatar %>
