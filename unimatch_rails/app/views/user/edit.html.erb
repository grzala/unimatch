<% @page_title = "edit" %>
<link rel="stylesheet" href="edit.css">
<div class="Edit_Form">
    <h2>Edit Details</h2>

    <%= form_for(:user, :url => {:action => 'update', :id => @user.id}, method: :put) do |f| %>
