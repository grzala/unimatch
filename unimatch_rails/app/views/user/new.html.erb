<% @page_title = "signup" %>

<div class="Sign_Form">
    <h2>Sign up</h2>
    <p>You email address need to end in .ac..uk to be able to create an account. No other email addresses will be accepted.</p>
    <%= form_for(:user, :url => {:controller => 'user', :action => 'create'}) do |f| %>
        <p> Email: </br> <%= f.text_field :email %></p>
        <p> password: </br> <%= f.password_field :password %> </p>
        <p> name: </br> <%= f.text_field :name %></p>
        <p> surname: </br> <%= f.text_field :surname %></p>
        
        
        <%= f.submit :Signup %>
    <% end %>
</div>
