<!DOCTYPE html>
<html>
  <head>
    <title>UniMatch</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

<body>

    <section id="screen1">
        <div id="nav_bar">
           <div class="left">
                <div id="navigation_left" class="navigation_inner nonselect">
                    <a href="#">
                        <h3>Home</h3>
                    </a>
                    <a href="#">
                        <h3>Features</h3>
                    </a>
                    <a href="#">
                        <h3>About</h3>
                    </a>
                </div>
            </div>
            <div class="right">
                <div id="navigation_right" class="navigation_inner nonselect">
                    <a href="#">
                        <h3>Login</h3>
                    </a>
                    <a href="#">
                        <h3>Register</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="home_logo centered nonselect">
            <%= image_tag("unimatch_logo.png", border: 0, height: "100px", alt: "UniMatch Logo", :class => "logo", :class => "block_centre") %>
        </div>
        <div class="text-wrapper nonselect">
            <h1 class="centered">Meet people at your Uni<br> with similar interests</h1>
        </div>
    </section>
    
    <section class="section">
        
        <div id="feature1">
            <div class="feature_inner_div" id="side_features1">
                <div class="icon">
                    <%= image_tag("icon.png", border: 0, height: "100px", alt: "UniMatch Logo", :class => "logo", :class => "block_centre") %>
                </div>
                <div class="text">
                    <h2 class="feature_text">Choose your interest and get matched with similar people at your Uni</h2>
                </div>
            </div>    
        </div>
        
        <div id="feature2">
            <div class="feature_inner_div">
                <div class="icon">
                    <%= image_tag("icon.png", border: 0, height: "100px", alt: "UniMatch Logo", :class => "logo", :class => "block_centre") %>
                </div>
                <div class="text">
                    <h2 class="feature_text">Message others <br>using our intuitive <br>chat functionality</h2>
                </div>
            </div>
        </div>
        
        <div id="feature3">
            <div class="feature_inner_div" id="side_features2">
                <div class="icon">
                    <%= image_tag("icon.png", border: 0, height: "100px", alt: "UniMatch Logo", :class => "logo", :class => "block_centre", :id => "icon3") %>
                </div>
                <div class="text">
                    <h2 class="feature_text">Join Societies and <br>keep updated<br> through notifications</h2>
                </div>
            </div>
        </div>
        
    </section>

</body>
