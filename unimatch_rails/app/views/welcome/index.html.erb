                <h2>Message others using our intuitive chat functionality</h2>
            </div>
        </div>
        <div class="feature">
            <div class="icon">
                <%= image_tag("icon.png", border: 0, height: "100px", alt: "feature2", :class => "logo", :class => "block_centre") %>
            </div>
            <div class="text">
                <h2>Choose your interests and get matched with similar people at your Uni</h2>
            </div>
        </div>
        <div class="feature">
            <div class="icon">
                <%= image_tag("icon.png", border: 0, height: "100px", alt: "feature3", :class => "logo", :class => "block_centre") %>
            </div>
            <div class="text">
                <h2>Join Societies and keep updated through notifications</h2>
            </div>
        </div>
    </section>
    <section id="screen3">
        <div class="image_box">
            <%= image_tag("icon.png", border: 0, height: "200px", alt: "feature1", :class => "logo", :class => "block_centre") %>
        </div>
        <div class="text_box">
            <h2>The central Hub<br> for everything<br> going on at your Uni</h2>
        </div>
    </section>
    <section id="screen4">
        <div class="text_box">
            <h2>The central Hub<br> for everything<br> going on at your Uni</h2>
        </div>
        <div class="image_box">
           <%= image_tag("icon.png", border: 0, height: "200px", alt: "feature1", :class => "logo", :class => "block_centre") %> 
        </div>
    </section>
    
    <section id="screen5">
        <div class="image_box">
            <%= image_tag("icon.png", border: 0, height: "200px", alt: "feature1", :class => "logo", :class => "block_centre") %> 
        </div>
        <div class="text_box">
            <h2>The central Hub<br> for everything<br> going on at your Uni</h2>
        </div>
    </section>
    
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    
    <script>
        $(function() {
          $('a[href*="#"]:not([href="#"])').click(function() {
            if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
              var target = $(this.hash);
              target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
              if (target.length) {
                $('html, body').animate({
                  scrollTop: target.offset().top
                }, 1000);
                return false;
              }
            }
          });
        });
    </script>
    
</body>
